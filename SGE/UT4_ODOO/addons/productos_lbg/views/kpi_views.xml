<odoo>
    <record id="view_product_kpi_kanban" model="ir.ui.view">
        <field name="name">product.kpi.lbg.kanban</field>
        <field name="model">product.kpi.lbg</field>
        <field name="arch" type="xml">
            <kanban create="false" edit="false" delete="false" action="action_open_related_view" type="object">
                <field name="name"/>
                <field name="value"/>
                <field name="color"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click oe_kanban_color_#{record.color.raw_value} oe_kanban_card">
                            <div class="o_kanban_card_header">
                                <strong class="o_kanban_record_title">
                                    <field name="name"/>
                                </strong>
                            </div>
                            <div class="o_kanban_card_content mt-3 text-center">
                                <h1 class="display-4"><field name="value"/></h1>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="action_product_kpi_dashboard" model="ir.actions.act_window">
        <field name="name">KPI Dashboard</field>
        <field name="res_model">product.kpi.lbg</field>
        <field name="view_mode">kanban</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No hay KPIs definidos.
            </p>
        </field>
    </record>

    <menuitem id="menu_dashboard_lbg_root"
              name="Panel de Control"
              sequence="1"/>

    <menuitem id="menu_dashboard_kpi"
              name="KPIs"
              parent="menu_dashboard_lbg_root"
              action="action_product_kpi_dashboard"/>
</odoo>