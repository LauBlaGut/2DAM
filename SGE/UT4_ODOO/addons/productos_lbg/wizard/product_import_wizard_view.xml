<odoo>
    <record id="view_product_import_wizard_form" model="ir.ui.view">
        <field name="name">product.import.wizard.form</field>
        <field name="model">product.import.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="file_data" filename="file_name"/>
                    <field name="file_name" invisible="1"/>
                </group>
                <footer>
                    <button name="action_import" string="Importar" type="object" class="btn-primary"/>
                    <button string="Cancelar" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_product_import_wizard_lbg" model="ir.actions.act_window">
        <field name="name">Importar Productos LBG</field>
        <field name="res_model">product.import.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>