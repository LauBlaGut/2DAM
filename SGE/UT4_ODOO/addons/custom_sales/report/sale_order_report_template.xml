<odoo>
    <template id="report_saleorder_custom" inherit_id="sale.report_saleorder_document">

        <xpath expr="//div[@id='informations']" position="inside">

            <div t-if="doc.user_id" class="col-auto mw-100 mb-2">
                <strong>Comercial:</strong>
                <p class="m-0" t-field="doc.user_id"/>
            </div>

            <div t-if="doc.validity_date" class="col-auto mw-100 mb-2">
                <strong>Validez:</strong>
                <p class="m-0" t-field="doc.validity_date"/>
            </div>
        </xpath>

        <xpath expr="//div[hasclass('page')]" position="inside">

            <t t-if="doc.custom_note">
                <div class="mt-3">
                    <h3>Nota interna</h3>
                    <p t-esc="doc.custom_note"/>
                </div>
            </t>

            <div class="row mt-4 border-top pt-2">
                <div class="col-6">
                    <t t-if="doc.payment_term_id">
                        <strong>TÃ©rminos de pago:</strong>
                        <br/>
                        <span t-field="doc.payment_term_id.note"/>
                        </t>
                </div>
                <div class="col-6">
                    <t t-if="doc.client_order_ref">
                        <strong>Referencia Cliente:</strong>
                        <br/>
                        <span t-field="doc.client_order_ref"/>
                    </t>
                </div>
            </div>

        </xpath>

    </template>

    <template id="report_saleorder_custom_wrapper">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="custom_sale.report_saleorder_custom"/>
            </t>
        </t>
    </template>
</odoo>