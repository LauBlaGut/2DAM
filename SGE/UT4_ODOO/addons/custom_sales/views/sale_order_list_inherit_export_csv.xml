<odoo>
    <record id="view_sale_order_list_inherit_export_csv" model="ir.ui.view">
        <field name="name">sale.order.list.inherit.export.csv</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button name="action_export_orders_csv"
                        type="object"
                        string="Exportar pedidos (CSV)"
                        class="btn-primary"/>
            </xpath>
        </field>
    </record>
</odoo>