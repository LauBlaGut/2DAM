<odoo>
    <record id="action_custom_sale_report" model="ir.actions.act_window">
        <field name="name">Análisis Ventas (custom)</field>
        <field name="res_model">sale.report</field>
        <field name="view_mode">graph,pivot</field>
        <field name="context">{'search_default_group_by_date_month': 1}</field>
    </record>

    <menuitem id="menu_custom_sales_root"
              name="Panel de control"
              parent="sale.sale_menu_root"
              sequence="80"/>

    <menuitem id="menu_custom_sales_dashboard"
              name="Ventas"
              parent="menu_custom_sales_root"
              sequence="10"/>

    <menuitem id="menu_custom_sales_kpis"
              name="KPIs"
              parent="menu_custom_sales_dashboard"
              action="action_custom_sale_kpi"
              sequence="10"/>

    <menuitem id="menu_custom_sales_analysis"
              name="Análisis"
              parent="menu_custom_sales_dashboard"
              action="action_custom_sale_report"
              sequence="20"/>
    <menuitem id="menu_import_logistics"
          name="Importar CSV Logística"
          parent="menu_custom_sales_dashboard"
          action="action_wizard_import_external_data"
          sequence="30"/>
</odoo>