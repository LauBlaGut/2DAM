<odoo>
  <data>

    <record id="view_equipment_tree" model="ir.ui.view">
        <field name="name">booking.equipment.tree</field>
        <field name="model">booking.equipment</field>
        <field name="arch" type="xml">
            <list string="Inventario">
                <field name="name" string="Referencia/Serial"/>
                <field name="category_id"/>
                <field name="location"/>
                <field name="state"
                       widget="badge"
                       decoration-success="state == 'available'"
                       decoration-warning="state == 'maintenance'"
                       decoration-danger="state == 'broken'"/>
                <field name="stock_real" optional="hide"/>
                <field name="stock_available" optional="show"/>
            </list>
        </field>
    </record>

    <record id="view_equipment_form" model="ir.ui.view">
        <field name="name">booking.equipment.form</field>
        <field name="model">booking.equipment</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <field name="image" widget="image" class="oe_avatar"/>
                    <div class="oe_title">
                        <label for="name" string="Referencia / Serial"/>
                        <h1><field name="name"/></h1>
                    </div>
                    <group>
                        <group string="Detalles Físicos">
                            <field name="category_id"/>
                            <field name="location"/>
                            <field name="quantity"/> <field name="state"/>
                        </group>
                        <group string="Información del Modelo">
                            <field name="description"/>
                            <field name="stock_real"/>
                            <field name="stock_available"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_equipment" model="ir.actions.act_window">
        <field name="name">Equipos</field>
        <field name="res_model">booking.equipment</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
          <p class="o_view_nocontent_smiling_face">
            ¡Registra tu primer equipo!
          </p>
        </field>
    </record>

    <menuitem id="menu_equipment"
              name="Equipos"
              parent="menu_booking_root"
              action="action_equipment"
              sequence="10"/>

  </data>
</odoo>