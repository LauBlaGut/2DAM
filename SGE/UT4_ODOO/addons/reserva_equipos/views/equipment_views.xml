<odoo>
    <record id="view_equipment_form" model="ir.ui.view">
        <field name="name">booking.equipment.form</field>
        <field name="model">booking.equipment</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <field name="image" widget="image" class="oe_avatar"/>
                    <div class="oe_title">
                        <h1><field name="name"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="serial_number"/>
                            <field name="state"/>
                        </group>
                        <group>
                            <field name="description"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_equipment_list" model="ir.ui.view">
        <field name="name">booking.equipment.list</field>
        <field name="model">booking.equipment</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="serial_number"/>
                <field name="state"/>
            </list>
        </field>
    </record>

    <record id="action_equipment" model="ir.actions.act_window">
        <field name="name">Equipos Inform√°ticos</field>
        <field name="res_model">booking.equipment</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>