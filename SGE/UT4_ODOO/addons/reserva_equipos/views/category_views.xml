<odoo>
  <data>

    <record id="view_category_tree" model="ir.ui.view">
        <field name="name">booking.category.tree</field>
        <field name="model">booking.equipment.category</field>
        <field name="arch" type="xml">
            <list string="Catálogo de Equipos">
                <field name="name" string="Equipo"/>
                <field name="location" string="Ubicación"/>

                <field name="total_items" string="Total"/>
                <field name="available_items" string="Disponibles" decoration-bf="1" decoration-success="available_items > 0" decoration-danger="available_items == 0"/>
            </list>
        </field>
    </record>

    <record id="view_category_form" model="ir.ui.view">
        <field name="name">booking.category.form</field>
        <field name="model">booking.equipment.category</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <label for="name" string="Nombre del Modelo"/>
                        <h1><field name="name"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="location"/>
                            <field name="description"/>
                        </group>
                        <group>
                            <field name="total_items" readonly="1"/>
                            <field name="available_items" readonly="1" decoration-bf="1" decoration-success="available_items > 0"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Inventario Físico (Seriales)">
                            <field name="equipment_ids">
                                <list editable="bottom">
                                    <field name="name" string="Serial / ID"/>
                                    <field name="state"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_category" model="ir.actions.act_window">
        <field name="name">Catálogo de Equipos</field>
        <field name="res_model">booking.equipment.category</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_category_main"
              name="Catálogo"
              parent="menu_booking_root"
              action="action_category"
              sequence="1"/>

  </data>
</odoo>